#include "acr_creature_i"

////////////////////////////////////////////////////////////////////////////////
// Constants ///////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Structures //////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Global Variables ////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Prototypes /////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main()
{
    ACR_CreatureOnSpellCastAt();

    // Custom code goes here.
	object oCaster = GetLastSpellCaster();
	object oItem = GetSpellCastItem();
	SendMessageToAllDMs(GetName(oCaster) + " cast " + IntToString(GetSpellId()) + " at " + GetName(OBJECT_SELF) + " with " + GetTag(oItem)); 
	
	if(GetLocalInt(OBJECT_SELF, "Fleeing") == 1) 
		{ClearAllActions(TRUE);
		 ActionMoveAwayFromObject(GetLastSpellCaster(), TRUE, 200.0);
		 
		}
	if(GetLocalInt(OBJECT_SELF, "Proxy") == 1) {
	    SetLocalInt(OBJECT_SELF, "Proxy", 2);	
		effect eRise = EffectVisualEffect(VFX_FNF_SUMMON_EPIC_UNDEAD, FALSE);
		ApplyEffectToObject(DURATION_TYPE_TEMPORARY, eRise, OBJECT_SELF, 5.0);
		int nAppearance = GetLocalInt(OBJECT_SELF, "Appearance");     
        DelayCommand(1.0, SetCreatureAppearanceType(OBJECT_SELF,nAppearance));
	    object oMyTrigger = GetLocalObject(OBJECT_SELF,"Undead_Proxy_Trg");
        string sMessage = GetLocalString(oMyTrigger, "ACR_SPAWN_MESSAGE");
		DelayCommand(1.5, ActionSpeakString(sMessage, TALKVOLUME_TALK));
		effect eEffect = GetFirstEffect(OBJECT_SELF);
		while(GetIsEffectValid(eEffect)) {
			RemoveEffect(OBJECT_SELF, eEffect);
			eEffect = GetNextEffect(OBJECT_SELF);
			}
		object oAttack = GetNearestCreature(CREATURE_TYPE_PLAYER_CHAR, PLAYER_CHAR_IS_PC, OBJECT_SELF, 1);
		ActionAttack(oAttack, FALSE);
		}

}