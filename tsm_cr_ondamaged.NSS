void main()
{
    ACR_CreatureOnDamaged();

    		 
		if(GetTag(OBJECT_SELF) == "abr_cr_ooz_blackpud") 
			{int nDamagePierce = GetDamageDealtByType(DAMAGE_TYPE_PIERCING);
			 int nDamageSlash = GetDamageDealtByType(DAMAGE_TYPE_SLASHING);
			 int nMaxHP = GetLocalInt(OBJECT_SELF, "Split_Pudding_HP");
			 if(GetLocalInt(OBJECT_SELF, "Split_Pudding_HP") == 0){
				 nMaxHP = GetMaxHitPoints(OBJECT_SELF);
				 SetLocalInt(OBJECT_SELF, "Split_Pudding_HP", nMaxHP);
				}
			 int nChildHP = nMaxHP/2;
			 ActionSpeakString("MaxHP = " + IntToString(nMaxHP), TALKVOLUME_TALK);
			 ActionSpeakString("ChildHP = " + IntToString(nChildHP), TALKVOLUME_TALK);
			 
			 effect eRemoveHalfHP = EffectBonusHitpoints (nChildHP * -1);
			 effect eDamageHalfHP = EffectDamage(nChildHP, DAMAGE_TYPE_SLASHING, DAMAGE_POWER_NORMAL, TRUE);
			 if((nDamagePierce > 0) || (nDamageSlash > 0)) {
			 	object oChildOne = CreateObject(OBJECT_TYPE_CREATURE, GetResRef(OBJECT_SELF), GetLocation(OBJECT_SELF), FALSE);
			 	object oChildTwo = CreateObject(OBJECT_TYPE_CREATURE, GetResRef(OBJECT_SELF), GetLocation(OBJECT_SELF), FALSE);
			 	SetLocalInt(oChildOne, "Split_Pudding_HP", nChildHP);
				SetLocalInt(oChildTwo, "Split_Pudding_HP", nChildHP);
				DelayCommand(5.0, ApplyEffectToObject(DURATION_TYPE_INSTANT, eRemoveHalfHP, oChildOne)); 
				DelayCommand(5.0, ApplyEffectToObject(DURATION_TYPE_INSTANT, eDamageHalfHP, oChildTwo)); 
				DestroyObject(OBJECT_SELF, 6.0);
				}
			 
			}
}