////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main(string sQuest, int nGold)
{
	object oPC = GetPCSpeaker();
	object oItem = GetLocalObject(oPC, sQuest);
	int nXPaward = GetJournalQuestExperience(sQuest);
	float fCRscaled = IntToFloat(GetHitDice(oPC));
	// reward the player
	GiveGoldToCreature(oPC, nGold);

	// remove the quest item if one exists
	//if (GetIsObjectValid(oItem)) { DestroyObject(oItem); }

	
	// update the quest to its final (completed) state
	ACR_AddPersistentJournalQuestEntry(sQuest, ACR_RetrieveQuestState(sQuest, oPC) + 1, oPC, 0, FALSE, FALSE, nXPaward, fCRscaled);
}