////////////////////////////////////////////////////////////////////////////////
// Includes ////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

// This line is required on all spawn group scripts.
#include "acr_spawn_i"

////////////////////////////////////////////////////////////////////////////////
// Constants ///////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Structures //////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Global Variables ////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// Function Prototypes /////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

// This is the main function, which is what the spawn system runs when this
// spawn group is spawned.
void main();

////////////////////////////////////////////////////////////////////////////////
// Function Definitions ////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////

void main() {
effect eShake = EffectVisualEffect(VFX_FNF_SCREEN_SHAKE);
effect eQuake = EffectVisualEffect(VFX_SPELL_HIT_EARTHQUAKE);
object oXornTwisted_One = ACR_SpawnObject("003_cr_xorn_twisted", OBJECT_TYPE_CREATURE);
				
 
switch(Random(3)) {
	
        case 0:
            ApplyEffectToObject(DURATION_TYPE_TEMPORARY, eShake, oXornTwisted_One, 5.0);
		 	ApplyEffectToObject(DURATION_TYPE_TEMPORARY, eQuake, oXornTwisted_One, 5.0);
			break;
		case 1:
		 	{ACR_SpawnObject("003_cr_xorn_twisted", OBJECT_TYPE_CREATURE);
			 ApplyEffectToObject(DURATION_TYPE_TEMPORARY, eShake, oXornTwisted_One, 10.0);
		 	 ApplyEffectToObject(DURATION_TYPE_TEMPORARY, eQuake, oXornTwisted_One, 10.0);
			 break;
			}
		case 2:
		 	{ACR_SpawnObject("003_cr_xorn_twisted", OBJECT_TYPE_CREATURE);
			 ACR_SpawnObject("003_cr_xorn_twisted", OBJECT_TYPE_CREATURE);
			 ACR_SpawnObject("003_cr_xorn_twisted", OBJECT_TYPE_CREATURE);
			 ACR_SpawnObject("003_cr_xorn_twisted", OBJECT_TYPE_CREATURE);
			 ApplyEffectToObject(DURATION_TYPE_TEMPORARY, eShake, oXornTwisted_One, 30.0);
		 	 ApplyEffectToObject(DURATION_TYPE_TEMPORARY, eQuake, oXornTwisted_One, 30.0);
			 break;
			}
   	}
}
	
