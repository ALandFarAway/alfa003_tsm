void main()
{
    ACR_CreatureOnPhysicallyAttacked();
	
	object oAttacker = GetLastAttacker();
	effect eDamage = EffectDamage(Random(6), DAMAGE_TYPE_POSITIVE, DAMAGE_POWER_NORMAL, FALSE);
    // Custom code goes here.
	
 	if(GetTag(OBJECT_SELF) == "003_slv_dq_r2_creature")
		{ActionAttack(oAttacker);
		 ActionSpeakString("*Lashes out with its serpentine tail.*", TALKVOLUME_TALK);
		 ApplyEffectToObject(DURATION_TYPE_INSTANT, eDamage, oAttacker);
		}
}